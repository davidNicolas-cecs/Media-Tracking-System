@model API.ViewModels.MyCollectionViewModel


<main class="container py-4 card">
	<h3 class="card-title">My Collection</h3>

	<div class="card-body">

		@foreach (var item in Model.Items)
		{
			// In Progress section
			if (Convert.ToString(item.Progress) == "InProgress")
			{
				<div class="card justify-content-center align-content-center border-0">
					<h4 class="card-title">In Progress</h4>
					<div class="card-body d-flex flex-row gap-4" >
						<p>@item.Title</p>
						<p>@item.Rating</p>

						@foreach (var genre in @item.Genres)
						{
							<span class="">@genre</span>
						}
					</div>
				</div>
			}
			else if (Convert.ToString(item.Progress) == "Completed")
			{
				<div>
					<h4>Completed</h4>
				</div>
			}
			else if (Convert.ToString(item.Progress) == "NotStarted")
			{
				<div>
					<h4>Not Started</h4>
				</div>
			}
		}

		@if (Model.Items == null)
		{
			<p>Add Items </p>
		}

	

	</div>


</main>