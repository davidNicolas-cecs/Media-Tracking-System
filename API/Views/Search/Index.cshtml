@model API.ViewModels.SearchPageViewModel
<main class="container d-flex flex-column">

    <form id="searchForm">
        <div class="d-flex flex-column">
            <label asp-for="SearchRequest.SearchText" class="mb-2">Search</label>
            <input asp-for="SearchRequest.SearchText" name="SearchText" class="form-control mb-3" type="text" />

            <div class="flex-row card card-body p-2">
                <div class="flex-row d-flex flex-wrap gap-2 justify-content-lg-end">

                    <!-- Type Filter -->
                    <div class="col-sm-auto position-relative">
                        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#typeFilter" aria-expanded="false" aria-controls="typeFilter">
                            Type <i class="bi bi-arrow-down-short"></i>
                        </button>
                        <div class="collapse mt-2 position-absolute mt-2 z-3" id="typeFilter">
                            <div class="card card-body" style="width:max-content">
                                <div>
                                    <input class="form-check-input" type="checkbox" value="" id="checkDefault">
                                    <label class="form-check-label fs-6" for="checkDefault">
                                        Movie
                                    </label>

                                </div>
                                <div>
                                    <input class="form-check-input" type="checkbox" value="" id="checkDefault">
                                    <label class="form-check-label fs-6" for="checkDefault">
                                        TV-Series
                                    </label>

                                </div>
                                <div>
                                    <input class="form-check-input" type="checkbox" value="" id="checkDefault">
                                    <label class="form-check-label fs-6" for="checkDefault">
                                        Anime
                                    </label>

                                </div>
                                <div>
                                    <input class="form-check-input" type="checkbox" value="" id="checkDefault">
                                    <label class="form-check-label fs-6" for="checkDefault">
                                        Book
                                    </label>

                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Genre Filter -->
                    <div class="col-sm-auto position-relative ">
                        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#genreFilter" aria-expanded="false" aria-controls="genreFilter">
                            Genre <i class="bi bi-arrow-down-short"></i>
                        </button>
                        <div class="collapse mt-2 position-absolute mt-2 z-3" id="genreFilter">
                            <div class="card card-body" style="width:max-content">
                                <div>
                                    <input class="form-check-input" type="checkbox" value="" id="checkDefault">
                                    <label class="form-check-label fs-6" for="checkDefault">
                                        Action
                                    </label>

                                </div>
                                <div>
                                    <input class="form-check-input" type="checkbox" value="" id="checkDefault">
                                    <label class="form-check-label fs-6" for="checkDefault">
                                        Adventure
                                    </label>

                                </div>
                                <div>
                                    <input class="form-check-input" type="checkbox" value="" id="checkDefault">
                                    <label class="form-check-label fs-6" for="checkDefault">
                                        Romance
                                    </label>

                                </div>

                                <div>
                                    <input class="form-check-input" type="checkbox" value="" id="checkDefault">
                                    <label class="form-check-label fs-6" for="checkDefault">
                                        Sci-Fi
                                    </label>

                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Year Filter -->
                    <div class="col-sm-auto position-relative">
                        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#yearFilter" aria-expanded="false" aria-controls="yearFilter">
                            Year <i class="bi bi-arrow-down-short"></i>
                        </button>
                        <div class="collapse mt-2 position-absolute mt-2 z-3" id="yearFilter">
                            <div class="card card-body" style="width: max-content">
                                <div>
                                    <input class="form-check-input" type="checkbox" value="" id="checkDefault">
