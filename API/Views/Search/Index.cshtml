                                </div>
                                <div>
                                    <input class="form-check-input" type="checkbox" value="" id="checkDefault">
                                    <label class="form-check-label fs-6" for="checkDefault">
                                        1980's
                                    </label>

                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Rating Filter -->
                    <div class="col-sm-auto position-relative">
                        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#ratingFilter" aria-expanded="false" aria-controls="ratingFilter">
                            Rating <i class="bi bi-arrow-down-short"></i>
                        </button>
                        <div class="collapse mt-2 position-absolute mt-2 z- w-100" id="ratingFilter">
                            <div class="card card-body flex-nowrap " style="width: max-content">
                                <div>
                                    <input class="form-check-input" type="checkbox" value="" id="checkDefault">
                                    <label class="form-check-label fs-6" for="checkDefault">
                                        Loved
                                    </label>

                                </div>

                                <div>
                                    <input class="form-check-input" type="checkbox" value="" id="checkDefault">
                                    <label class="form-check-label fs-6" for="checkDefault">
                                        Enjoyed
                                    </label>

                                </div>
                                <div>
                                    <input class="form-check-input" type="checkbox" value="" id="checkDefault">
                                    <label class="form-check-label fs-6" for="checkDefault">
                                        Decent
                                    </label>

                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Language Filter -->
                    <div class="col-sm-auto position-relative">
                        <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#languageFilter" aria-expanded="false" aria-controls="languageFilter">
                            Language <i class="bi bi-arrow-down-short"></i>
                        </button>
                        <div class="collapse mt-2 position-absolute mt-2 z-3" id="languageFilter">
                            <div class="card card-body">
                                <div>
                                    <input class="form-check-input" type="checkbox" value="" id="checkDefault">
                                    <label class="form-check-label" for="checkDefault">
                                        English
                                    </label>
                                </div>
                                <div>
                                <input class="form-check-input" type="checkbox" value="" id="checkDefault">
                                <label class="form-check-label" for="checkDefault">
                                    Spanish
                                </label>

                                </div>
                                <div>
                                    <input class="form-check-input" type="checkbox" value="" id="checkDefault">
                                    <label class="form-check-label" for="checkDefault">
                                        German
                                    </label>

                                </div>
                                <div>
                                    <input class="form-check-input" type="checkbox" value="" id="checkDefault">
                                    <label class="form-check-label" for="checkDefault">
                                        Dutch
                                    </label>

                                </div>
                            </div>
                        </div>
                    </div>



                </div>
            </div>
        </div>
    </form>

    <div id="searchResults" class="mt-4"></div>


</main>
@section Scripts {

<script>
    document.getElementById("searchForm").addEventListener("submit", async function(e) {
        e.preventDefault();

        const formData = new FormData(this);
        const data = Object.fromEntries(formData.entries());
        console.log(data)
         const response = await fetch("/Search/SearchMediaItem", {
        method: "POST",
        headers: {
            "Content-Type": "application/json"
        },
        body: JSON.stringify(data)
    });
       //we get a partial view so we expect html 
        const html = await response.text();
        document.getElementById("searchResults").innerHTML = html;


        
 

    });
</script>
}